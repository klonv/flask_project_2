extends base.pug

block content 
  h1 {{ _('Reset Password') }}
  form(action="" method="post")
    {{ form.hidden_tag() }}
    p 
      {{ form.email.label }}
      {{ form.email(size=64) }}
      for error in form.email.errors
        span(style="color: red;")
          [{{ error }}]
    p 
      {{ form.submit() }}