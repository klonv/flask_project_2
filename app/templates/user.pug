extends base.pug

block content 
  table
    tr(valign="top")
      td 
        img(src="{{ user.avatar(128) }}")
      td 
        h1 User: {{ user.username }}
        if user.about_me 
          p 
            {{ user.about_me }}
        if user == current_user 
          p 
            a(href="{{ url_for('main.edit_profile') }}") Edit your profile
        elif not current_user.is_following(user)
          p 
            form(action="{{ url_for('main.follow', username=user.username) }}" method="post")
              {{ form.hidden_tag() }}
              {{ form.submit(value='Follow') }}
        else 
          p 
            form(action="{{ url_for('main.unfollow', username=user.username) }}" method="post")
              {{ form.hidden_tag() }}
              {{ form.submit(value='Unfollow') }}
        if user.last_seen 
          p Last seen on:
            {{ moment(user.last_seen).format('LLL') }}
  hr
  for post in posts 
    include _post.pug
  if prev_url 
    a(href="{{ prev_url }}") Never posts 
  if next_url 
    a(href="{{ next_url }}") Older posts
